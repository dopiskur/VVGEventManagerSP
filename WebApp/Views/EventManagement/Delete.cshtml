@model eventLib.Models.Event

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Device</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventTypeName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.HiddenFor(x => x.IDEvent)
        </div>

        <input type="submit" asp-action="DeleteConfirm" asp-for="IDEvent" value="Confirm" class="btn btn-danger mt-3" />
        <a asp-action="Index" class="btn btn-outline-primary mt-3">Back to List</a>
    </form>
</div>
