@model WebApp.ViewModels.EventVM

@{
    ViewData["Title"] = "EventPerformerAdd";
}


<h4>Add Performer</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EventPerformerAdd">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="Event.IDEvent" class="form-control" />
                <span asp-validation-for="Event.IDEvent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventPerformer.PerformerName" class="control-label"></label>
                @Html.DropDownListFor(m => m.EventPerformer.PerformerID,
                         new SelectList(Model.Performers.ToList(), "IDPerformer", "PerformerName", Model.Performers.First().IDPerformer),
                         new { @class = "form-control" })
            </div>


            <br />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary mt-3">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
